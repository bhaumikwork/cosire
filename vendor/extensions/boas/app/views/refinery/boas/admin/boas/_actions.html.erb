<ul>
  <% if ::Refinery::Boas::Admin::BoasController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.boas_admin_boas_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_boas_admin_boa_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Boas::Admin::BoasController.sortable? && ::Refinery::Boas::Boa.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Boas"),
                 refinery.boas_admin_boas_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Boas"),
                 refinery.boas_admin_boas_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
