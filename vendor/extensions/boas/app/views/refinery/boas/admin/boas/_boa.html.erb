<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(boa) -%>">
  <span class='title'>
    <%= boa.name %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.boas_boa_path(boa),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_boas_admin_boa_path(boa),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.boas_admin_boa_path(boa),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => boa.name),
        :method => :delete %>
  </span>
</li>
