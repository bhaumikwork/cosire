<% content_for :body_content_title do %>
  <%= @boa.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @boa.name %>
    </p>
  </section>
  <section>
    <h1>Designation</h1>
    <p>
      <%=raw @boa.designation %>
    </p>
  </section>
  <section>
    <h1>Profile</h1>
    <p>
      <%= image_fu @boa.profile, nil %>
    </p>
  </section>
  <section>
    <h1>About</h1>
    <p>
      <%=raw @boa.about %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="boas">
      <% @boas.each do |boa| %>
        <li>
          <%= link_to boa.name, refinery.boas_boa_path(boa) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
