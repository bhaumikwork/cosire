<ul>
  <% if ::Refinery::Industries::Admin::IndustriesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.industries_admin_industries_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_industries_admin_industry_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Industries::Admin::IndustriesController.sortable? && ::Refinery::Industries::Industry.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Industries"),
                 refinery.industries_admin_industries_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Industries"),
                 refinery.industries_admin_industries_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
