<% content_for :body_content_title do %>
  <%= @brand.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @brand.title %>
    </p>
  </section>
  <section>
    <h1>Hover Image</h1>
    <p>
      <%= image_fu @brand.hover_image, nil %>
    </p>
  </section>
  <section>
    <h1>Profile</h1>
    <p>
      <%= image_fu @brand.profile, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @brand.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="brands">
      <% @brands.each do |brand| %>
        <li>
          <%= link_to brand.title, refinery.brands_brand_path(brand) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
