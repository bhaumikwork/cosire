<% content_for :body_content_title do %>
  <%= @strategy.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @strategy.name %>
    </p>
  </section>
  <section>
    <h1>Profile</h1>
    <p>
      <%= image_fu @strategy.profile, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @strategy.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="strategies">
      <% @strategies.each do |strategy| %>
        <li>
          <%= link_to strategy.name, refinery.strategies_strategy_path(strategy) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
