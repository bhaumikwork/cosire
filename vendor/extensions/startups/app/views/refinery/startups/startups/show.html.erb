<% content_for :body_content_title do %>
  <%= @startup.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @startup.title %>
    </p>
  </section>
  <section>
    <h1>Oneliner</h1>
    <p>
      <%=raw @startup.oneliner %>
    </p>
  </section>
  <section>
    <h1>Profile</h1>
    <p>
      <%= image_fu @startup.profile, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @startup.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="startups">
      <% @startups.each do |startup| %>
        <li>
          <%= link_to startup.title, refinery.startups_startup_path(startup) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
