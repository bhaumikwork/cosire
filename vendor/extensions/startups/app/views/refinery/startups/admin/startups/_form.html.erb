<%= form_for [refinery, :startups_admin, @startup] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @startup,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :oneliner -%>
    <%= f.text_field :oneliner -%>
  </div>

  <div class='field'>
    <%= f.label :profile -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :profile_id,
               :image => @startup.profile,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "startups/startup" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.startups.admin.startups.startup'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @startup.title) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
