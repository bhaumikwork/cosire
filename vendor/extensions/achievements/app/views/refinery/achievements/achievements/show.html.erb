<% content_for :body_content_title do %>
  <%= @achievement.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @achievement.title %>
    </p>
  </section>
  <section>
    <h1>Profile</h1>
    <p>
      <%= image_fu @achievement.profile, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @achievement.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="achievements">
      <% @achievements.each do |achievement| %>
        <li>
          <%= link_to achievement.title, refinery.achievements_achievement_path(achievement) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
