<%= form_for [refinery, :blocks_admin, @block] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @block,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :image1 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image1_id,
               :image => @block.image1,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :image2 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image2_id,
               :image => @block.image2,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :link -%>
    <%= f.text_field :link -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.blocks.admin.blocks.block'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @block.name) -%>
<% end -%>
