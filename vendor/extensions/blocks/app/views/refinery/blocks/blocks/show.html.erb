<% content_for :body_content_title do %>
  <%= @block.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @block.name %>
    </p>
  </section>
  <section>
    <h1>Image1</h1>
    <p>
      <%= image_fu @block.image1, nil %>
    </p>
  </section>
  <section>
    <h1>Image2</h1>
    <p>
      <%= image_fu @block.image2, nil %>
    </p>
  </section>
  <section>
    <h1>Link</h1>
    <p>
      <%=raw @block.link %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="blocks">
      <% @blocks.each do |block| %>
        <li>
          <%= link_to block.name, refinery.blocks_block_path(block) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
