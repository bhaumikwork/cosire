<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(ip) -%>">
  <span class='title'>
    <%= ip.title %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.ips_ip_path(ip),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_ips_admin_ip_path(ip),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.ips_admin_ip_path(ip),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => ip.title),
        :method => :delete %>
  </span>
</li>
