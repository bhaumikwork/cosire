<ul>
  <% if ::Refinery::Ips::Admin::IpsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.ips_admin_ips_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_ips_admin_ip_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Ips::Admin::IpsController.sortable? && ::Refinery::Ips::Ip.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Ips"),
                 refinery.ips_admin_ips_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Ips"),
                 refinery.ips_admin_ips_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
