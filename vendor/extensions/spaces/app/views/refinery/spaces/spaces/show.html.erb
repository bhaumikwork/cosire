<% content_for :body_content_title do %>
  <%= @space.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @space.title %>
    </p>
  </section>
  <section>
    <h1>Hover Image</h1>
    <p>
      <%= image_fu @space.hover_image, nil %>
    </p>
  </section>
  <section>
    <h1>Profile</h1>
    <p>
      <%= image_fu @space.profile, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @space.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="spaces">
      <% @spaces.each do |space| %>
        <li>
          <%= link_to space.title, refinery.spaces_space_path(space) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
