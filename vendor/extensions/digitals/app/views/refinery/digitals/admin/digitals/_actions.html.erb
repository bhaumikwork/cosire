<ul>
  <% if ::Refinery::Digitals::Admin::DigitalsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.digitals_admin_digitals_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_digitals_admin_digital_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Digitals::Admin::DigitalsController.sortable? && ::Refinery::Digitals::Digital.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Digitals"),
                 refinery.digitals_admin_digitals_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Digitals"),
                 refinery.digitals_admin_digitals_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
