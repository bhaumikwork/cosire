<%= form_for [refinery, :members_admin, @member] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @member,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :designation -%>
    <%= f.text_field :designation -%>
  </div>

  <div class='field'>
    <%= f.label :profile -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :profile_id,
               :image => @member.profile,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:about],
                :object => "members/member" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.members.admin.members.member'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @member.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
