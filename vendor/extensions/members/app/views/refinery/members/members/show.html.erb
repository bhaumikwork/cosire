<% content_for :body_content_title do %>
  <%= @member.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @member.name %>
    </p>
  </section>
  <section>
    <h1>Designation</h1>
    <p>
      <%=raw @member.designation %>
    </p>
  </section>
  <section>
    <h1>Profile</h1>
    <p>
      <%= image_fu @member.profile, nil %>
    </p>
  </section>
  <section>
    <h1>About</h1>
    <p>
      <%=raw @member.about %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="members">
      <% @members.each do |member| %>
        <li>
          <%= link_to member.name, refinery.members_member_path(member) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
