<% content_for :body_content_title do %>
  <%= @interaction.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @interaction.title %>
    </p>
  </section>
  <section>
    <h1>Hover Image</h1>
    <p>
      <%= image_fu @interaction.hover_image, nil %>
    </p>
  </section>
  <section>
    <h1>Profile</h1>
    <p>
      <%= image_fu @interaction.profile, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @interaction.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="interactions">
      <% @interactions.each do |interaction| %>
        <li>
          <%= link_to interaction.title, refinery.interactions_interaction_path(interaction) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
